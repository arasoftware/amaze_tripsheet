<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:id="@+id/scrollvoew"
    tools:context="com.ara.advent.SignatureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/booking_id" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="18dp"
                    android:gravity="center"
                    android:text="@string/Starting_date" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp">

                <TextView

                    android:id="@+id/textview_tripnoSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no"
                    android:textColor="@color/graly" />

                <TextView
                    android:id="@+id/textview_tripdateSign"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:text="@string/dd_mm_yy"
                    android:textColor="@color/graly" />
            </RelativeLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/gray">

            </TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/customer_name" />

            <TextView
                android:id="@+id/textview_customerSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="@string/customer_name"
                android:textColor="@color/graly" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="Signature"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/border">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="signature above" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:text="save"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/savesign"
                android:gravity="center"
                android:background="@drawable/boxx"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/clearsign"
                android:gravity="center"
                android:background="@drawable/boxx"
                android:layout_margin="1dp"
                android:text="clear"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
