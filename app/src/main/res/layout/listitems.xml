<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/card_style"
        app:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_pickup_time"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_text_view"
                android:gravity="center"
                android:text="HH:MM"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/text_tbcustname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mountain_gren"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/tv_pickup_time"
                android:text="@string/amaze_travels"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_pickup_time"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_pickup_time">

                <TextView
                    android:id="@+id/text_tbno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1001"
                    android:textColor="@color/mountain_gren"
                    android:textStyle="italic|bold" />

                <TextView

                    android:id="@+id/text_tbdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="7dp"
                    android:text="@string/dd_mm_yy"
                    android:textColor="@color/mountain_gren"
                    android:textStyle="italic|bold" />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>